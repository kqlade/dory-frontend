{
  "name": "DORY: Dynamic Online Recall for You",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Contextual browser history search engine",
  "action": {
    "default_icon": {
      "16": "icons/dory_logo_16x16.png",
      "48": "icons/dory_logo_48x48.png",
      "128": "icons/dory_logo_128x128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "src/pages/newtab/newtab.html"
  },
  "background": {
    "service_worker": "src/background/serviceWorker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/contentExtractor.ts"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/activityTracker.ts"]
    }
  ],
  "icons": {
    "16": "icons/dory_logo_16x16.png",
    "48": "icons/dory_logo_48x48.png",
    "128": "icons/dory_logo_128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "windows",
    "history",
    "alarms",
    "webNavigation",
    "idle",
    "identity",
    "cookies"
  ],
  "oauth2": {
    "client_id": "%GOOGLE_OAUTH_CLIENT_ID%",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
} 